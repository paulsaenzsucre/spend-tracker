<div class="dev-cont">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="dev-info">
      
      <div class="field">
        <%= f.label :email, :class => "visually-hidden" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "dev-input", :placeholder => "Email" %>
      </div>
    </div>    

    <div class="dev-actions">
      <%= f.submit "SEND INSTRUCTIONS", :class => "splash-btn login-btn dev-btn" %>
      <%= link_to "CANCEL", root_path, class: "splash-btn link-btn signup-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>